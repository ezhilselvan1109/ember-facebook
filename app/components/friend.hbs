<div class="d-flex align-items-center justify-content-center">
    {{#if (eq this.isFriend true)}}
    <button class="btn btn-secondary" type="button" disabled={{this.isLoading}} {{on "click" this.reject}}>
        <i class="bi bi-person-check-fill"></i> Friends
    </button>
    {{else if (eq this.isFriend false)}}
    {{#if this.status}}
    <div class="d-flex gap-2">
        <button class="btn  btn-success" type="button" disabled={{this.isLoading}} {{on "click" this.accept}}>
            <i class="bi bi-person-plus-fill"></i> Add Friend
        </button>
        <button class="btn  btn-secondary" type="button" disabled={{this.isLoading}} {{on "click"
            this.reject}}>
        <i class="bi bi-person-dash-fill"></i> Reject
        </button>
    </div>

    {{else}}
    <button class="btn  btn-secondary" type="button" disabled={{this.isLoading}} {{on "click" this.reject}}>
        <i class="bi bi-person-plus-fill"></i> Requested
    </button>
    {{/if}}
    {{else}}
    <button class="btn btn-primary" type="button" disabled={{this.isLoading}} {{on "click" this.request}}>
        <i class="bi bi-person-plus-fill"></i> Add Friend
    </button>
    {{/if}}
</div>