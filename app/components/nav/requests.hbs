<div class="card col-md-12 p-2">
    <h5 class="card-header">Friends Requests</h5>
    <div class="container">
        <div class="card-body row gap-2">
            {{#if @friend}}
            {{#each @friend as |data|}}
            <div class="card p-2 col-6">
                <LinkTo @route="account" @model={{data.id}} class="text-decoration-none">
                    <div class="d-flex justify-content-around align-items-center pb-2">
                        <div class="col-md-2">
                            <img class="avatar" src="/assets/images/user.png" alt="">
                        </div>
                        <div class="col-md-10">
                            {{concat data.first_name " " data.last_name}}
                        </div>
                    </div>
                </LinkTo>
            </div>
            {{/each}}
            {{else}}
            <p>no data</p>
            {{/if}}
        </div>
    </div>
</div>
{{yield}}