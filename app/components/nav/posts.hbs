<div class="d-flex gap-3 justify-content-between col-md-12">
    <div class="col-md-6">
        <div class="card mb-3">
            <h5 class="card-header">Intro</h5>
            <div class="card-body">
                <div class="d-flex justify-content-around col-md-12 pb-2">
                    <div class="d-flex flex-column gap-3">
                        <div>
                            <i class="bi bi-suitcase-lg-fill text-secondary"></i> Trainee at Zoho 2024 to present
                        </div>
                        <div>
                            <i class="bi bi-mortarboard-fill text-secondary"></i> Went to Vivekananda Matriculation
                            Higher Secondary School,Paundamangalam Left in 2017
                        </div>
                        <div>
                            <i class="bi bi-house-door-fill text-secondary"></i> Lives in Chennai, India
                        </div>
                        <div>
                            <i class="bi bi-house-door-fill text-secondary"></i> From Dindigul, Tamil Nadu
                        </div>
                        <div>
                            <i class="bi bi-mortarboard-fill text-secondary"></i> Single
                        </div>
                        <div class="d-flex align-items-center justify-content-start gap-2">
                            <div>
                                <i class="bi bi-telephone-fill text-secondary"></i>
                            </div>
                            <div>
                                <p style="margin: 0;">1234567890</p>
                                <span>Mobile</span>
                            </div>
                        </div>
                        <div>
                            <i class="bi bi-heart-fill text-secondary"></i> Single
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card mb-3">
            <h5 class="card-header">Friends</h5>
            <div class="card-body d-flex flex-column gap-3">
                {{#if @friend}}
                {{#each @friend as |data|}}
                <div class="card p-2">
                <LinkTo @route="account" @model={{data.id}} class="text-decoration-none">
                    <div class="d-flex justify-content-around align-items-center pb-2">
                        <div class="col-md-2">
                            <img class="avatar" src="/assets/images/user.png" alt="">
                        </div>
                        <div class="col-md-10">
                            {{concat data.first_name " " data.last_name}}
                        </div>
                    </div>
                </LinkTo>
                </div>
                {{/each}}
                {{else}}
                <p>no data</p>
                {{/if}}
            </div>
        </div>
    </div>
    <div class="col-md-6">
        {{#if @posts.post}}
        {{#each @posts.post as |post|}}
        <Post::Post @id={{@posts.id}} @post_id={{post.id}} @description={{post.description}} @image={{post.image}}
            @like={{post.like.count}} @isLiked={{post.like.isLiked}} @name={{concat @posts.first_name " "
            @posts.last_name}} @pic={{@posts.profile.image}}/>
        {{/each}}
        {{else}}
        <div class="card d-flex justify-content-center align-items-center">
            <p>No Post</p>
        </div>
        {{/if}}
    </div>
</div>
{{yield}}