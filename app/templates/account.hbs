<div>
    {{#if this.isLoading}}
    <div class="container d-flex align-items-center justify-content-center vh-100">
        <div class="spinner-grow text-primary" role="status"></div>
    </div>
    {{else}}
    <Navbar @user={{this.userData.user}} />
    <div class="col-md-12 d-flex flex-column  gap-3">
        <div class="bg-white shadow-sm mt-5 p-5 d-flex flex-column align-items-center justify-content-center">
            <div class=" col-md-9">
                <div class="d-flex justify-content-around col-md-12">
                    <div class="d-flex align-items-center justify-content-center gap-2">
                        {{#if this.accountUser.profile.image}}
                        <img class="avatar" src='data:image/jpeg;base64,{{this.accountUser.profile.image}}' alt="">
                        {{else}}
                        <img class="avatar" src="/assets/images/user.png" alt="">
                        {{/if}}
                        <h5>{{concat this.accountUser.first_name " " this.accountUser.last_name}}</h5>
                    </div>
                    {{#if (eq this.user_id this.model)}}
                    <div class="d-flex flex-row gap-2 align-items-center justify-content-center">
                        <button class="btn btn-primary" type="submit" {{on "click" this.logout}}>Logout</button>
                        <Profile @loadData={{this.loadData}} @accoutDetail={{this.accountUser}} />
                    </div>
                    {{else}}
                    <Friend @friends={{this.friends}} @id={{this.accountUser.id}} @user_id={{this.user_id}} />
                    {{/if}}
                </div>
            </div>
        </div>
        <div class="d-flex col-md-12 gap-3 justify-content-center">
            <div class="col-md-4">
                <div class="card mb-3">
                    <h5 class="card-header">Intro</h5>
                    <div class="card-body">
                        <div class="d-flex justify-content-around col-md-12 pb-2">
                            <div class="col-md-2">
                                <img class="avatar" src="/assets/images/user.png" alt="">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-3">
                    <h5 class="card-header">Friends</h5>
                    <div class="card-body">
                        {{#if this.friend}}
                        {{#each this.friend as |data|}}
                        <LinkTo @route="account" @model={{data.id}} class="text-decoration-none">
                            <div class="d-flex justify-content-around align-items-center pb-2">
                                <div class="col-md-2">
                                    <img class="avatar" src="/assets/images/user.png" alt="">
                                </div>
                                <div class="col-md-10">
                                    {{concat data.first_name " " data.last_name}}
                                </div>
                            </div>

                        </LinkTo>
                        {{/each}}
                        {{else}}
                        <p>no data</p>
                        {{/if}}
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                {{#each this.userPosts.post as |post|}}
                <Post @id={{this.userPosts.id}} @post_id={{post.id}} @description={{post.description}}
                    @image={{post.image}} @like={{post.like.count}} @isLiked={{post.like.isLiked}} @name={{concat
                    this.userPosts.first_name " " this.userPosts.last_name}} />
                {{/each}}
            </div>
        </div>
    </div>
    {{/if}}
</div>

{{outlet}}