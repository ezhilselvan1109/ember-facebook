<div class="container d-flex align-items-center justify-content-center vh-100">
    <div>
        <div class="d-flex align-items-center justify-content-center">
            <img style="width: 25%;" src="https://static.xx.fbcdn.net/rsrc.php/y1/r/4lCu2zih0ca.svg" alt="Facebook">
        </div>
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="shadow mb-5 bg-white rounded">
                    <h4 class="px-4 pt-4">Find Your Account</h4>
                    <hr>
                    <p class="px-4">Please enter your email address or mobile number to search for your account.</p>
                    <form class="d-flex flex-column gap-3 px-4" {{on "submit" this.searchUser}}>
                        <div class="form-group">
                            <input type="text" value={{this.userId}} {{on "input" this.updateUserId}}
                                class="form-control form-control-md" placeholder="Email or Phone number" required>
                        </div>
                        <div class="mb-4 d-flex justify-content-end gap-3">
                            <LinkTo @route="login" class="btn btn-md btn-secondary">Cancel</LinkTo>
                            <button class="btn btn-md btn-primary" type="submit" disabled={{this.isLoading}}>
                                {{#if this.isLoading}}
                                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                Loading...
                                {{else}}
                                Search
                                {{/if}}
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{{outlet}}