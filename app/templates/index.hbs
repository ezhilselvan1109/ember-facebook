<div>
    {{#if this.isLoading}}
    <div class="container d-flex align-items-center justify-content-center vh-100">
    <div class="spinner-grow text-primary" role="status"></div>
    </div>
    {{else}}
    <Navbar @user={{this.userData.user}} />
    <div class="d-flex justify-content-evenly col-md-12" style="margin-top: 4%;">
        <div class="row col-md-4 pb-3">
            <Post::Create />
            {{#if this.postsData}}
            {{#each this.postsData as |post|}}
            <Post::Post @id={{post.user.id}} @post_id={{post.id}} @description={{post.description}} @image={{post.image}}
                @like={{post.like.count}} @isLiked={{post.like.isLiked}} @name={{concat post.user.first_name " "
                post.user.last_name}} @pic={{post.user.profile.image}}/>
            {{/each}}
            {{else}}
            <div class="d-flex align-items-center justify-content-center">
            <p>No post</p>
            </div>
            {{/if}}
        </div>
    </div>
    {{/if}}
    {{outlet}}
</div>